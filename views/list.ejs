<%- include("header") -%>

<div class="box" id="class="box"">
    <h1 id="heading"><%= listTitle %></h1>
</div>

<div class="box">
    <form class= "item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Add Item" autocomplete="off"/>
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>

    <% newItems.forEach((item) => { %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" class="checkbox">
                <p><%= item.name %></p>
                <button type="submit" name="deleteItem" value="<%= item._id %>" class="btn del"><i class="fa fa-trash"></i></button>
                <input type="hidden" name="listName" value="<%= listTitle %>"/>
            </div>
        </form>
    <% }) %>
</div>

<%- include("footer") -%>